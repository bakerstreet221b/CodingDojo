<h1>Friends</h1>
<div class="row">
	<div class="col-md-2">
	</div>
	<div class="col-md-8">
		<div class="col-md-10">
      <%= form_tag friends_path, :method => 'get' do %>
        <p>
          <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search", :name => nil %>
        </p>
      <% end %>

	  </div>
    <% if @find_friends.any? %>
      <table class="table">
        <tbody>
          <% @find_friends.each do |f| %>
            <tr>
              <td><%= f.username %></td>
              <td><%= f.first_name + " " + f.last_name %></td>
              <% @friend_id = f.id %>
              <td><%= simple_form_for @friend, html: {:class => 'form-horizontal' }, method: :get do |f| %>
              <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
              <%= tag(:input, :type => "hidden", :name => "user_id", :value => current_user.id) %>
              <%= tag(:input, :type => "hidden", :name => "friend_id", :value => @friend_id) %>
                <div class='form-group'>
                  <%= f.submit 'Send friend request' , :class => "btn btn-primary" %>
                </div>
              <% end %></td>
              <td><%= link_to 'Show', f %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
    <table class="table">
        <tbody>
          <% @friends.each do |friend| %>
            <tr>
              <td><%= friend.username %></td>
              <td><%= link_to 'Show', friend %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
	</div>
	<div class="col-md-2"></div>
</div>
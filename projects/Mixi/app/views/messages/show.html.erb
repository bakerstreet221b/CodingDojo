  <% if signed_in? %>
    <div class="col-md-8">
      <h2><%= @message.subject %></h2>
      <table class="table table-striped">
        <tbody>
          <tr>
            <td class="up"><%= link_to @message.user.username, user_path(id: @message.user.id) %></td>
            <td><%= @message.message %></td>
          </tr>
          <% display_replies(@message.id) %>
          <% if @replies.any? %>
            <% @replies.each do |r| %>
              <tr>
                <td class="up"><%= link_to r.user.username, user_path(id: r.user.id) %></td>
                <td><%= r.reply %></td>
              </tr>
            <% end -%>
          <% end -%>
        </tbody>
      </table>
      <br>
      <br>
      <div class="col-md-10">
        <p>What say you?</p>
        <% new_reply %>
        <%= simple_form_for @reply, html: {:class => 'form-horizontal' }, method: :post do |f| %>
          <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :message_id, value: @message.id %>
          <div class='form-group'>
            <%= f.text_area :reply, :class => "form-control focus_expand" %>
          </div>
          <div class='form-group'>
              <%= f.submit 'Say it' , :class => "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  <% end -%>
  <div class="col-md-2"></div>
</div>

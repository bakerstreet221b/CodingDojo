<!DOCTYPE html>
<html>
<head>
  <title>Mixi</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default" role="navigation">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Mixi', home_path, :class=>"navbar-brand" %>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li><%= link_to 'Home', home_path %></li>
          <% if signed_in? %>
            <li><%= link_to 'New posts', new_post_path %></li>
            <li><%= link_to 'Friends', friends_path %></li>
            <li><%= link_to 'Messages', messages_path %></li>
          <% end %>
        </ul>
      <!-- <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
        <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form> -->
        <ul class="nav navbar-nav navbar-right">
          <% if signed_in? %>
            <li><%= link_to current_user.username, current_user %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <b class="caret"></b></a>
              <ul class="dropdown-menu">
                  <li><%= link_to 'Account settings', edit_user_path(current_user) %></li>
                  <li><%= link_to 'Profile', user_path(current_user.id) %></li>
                  <li><%= link_to 'Messages', messages_path %></li>
                  <li><%= link_to 'Friends', friends_path %></li>
                  <li class="divider"></li>
                  <li><%= link_to 'Sign out', signout_path , method: :delete, data: { confirm: 'Are you sure?' }%></li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to 'Sign in', signin_path %></li>
            <li><%= link_to 'or register', signup_path %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>
  <div class="container" id="main_container">

    <%= yield %>

  <br>
  <br>
  <hr>
  <footer>Made with love by Thereza, 2013</footer>
  </div>
</body>
</html>

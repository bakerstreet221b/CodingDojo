<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6">
    <h3>
      <strong><%= @user.username %></strong>

    </h3>

    <p>
      <strong>Name:</strong>
      <%= @user.first_name + " " + @user.last_name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
  </div>
  <div class="col-md-6">
    <% if @user.id != current_user.id %>
      <button class="btn btn-primary"><%= link_to 'Message', new_message_path(@user) %></button>
    <% elsif @user.id == current_user.id %>
    <button class="btn"><%= link_to 'Sign out', signout_path , method: :delete, data: { confirm: 'Are you sure?' }%></button>
    <br>
    <br>
    <button class="btn btn-danger"><%= link_to 'Delete account', current_user, method: :delete, data: { confirm: 'Are you sure?' } %></button>
    <% end %>
  </div>
</div>


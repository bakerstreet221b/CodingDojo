  <p id="notice"><%= notice %></p>
  <div class="col-md-5">
    <h3>
      <strong><%= @user.username %></strong>

    </h3>
    <div>
      <% if avatar(@user_id).any?%>
      <%= image_tag(@avatar.picture_url, :width => 200) %>
      <% else%>
      <% default_avatar %>
      <%= image_tag(@default_avatar.picture_url, :width => 200) %>
      <% end -%>
    </div>
    <br>
    <p>
      <strong>Name:</strong>
      <%= @user.first_name + " " + @user.last_name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>
  </div>
  <div class="col-md-5">
    <% if @user.id != current_user.id %>
      <button class="btn btn-primary"><%= link_to 'Message', new_message_path(@user) %></button>
    <% elsif @user.id == current_user.id %>
    <button class="btn"><%= link_to 'Sign out', signout_path , method: :delete, data: { confirm: 'Are you sure?' }%></button>
    <br>
    <br>
    <button class="btn"><%= link_to 'Edit', edit_user_path(current_user) %></button>
    <br>
    <br>
    <button class="btn"><%= link_to 'Delete account', current_user, method: :delete, data: { confirm: 'Are you sure?' } %></button>
    <% end %>
  </div>
</div>


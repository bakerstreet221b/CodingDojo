    <h1>Post by <%= link_to @post.user.username, user_path(id: @post.user.id) %></h1>
    <p><%= @post.post %></p>
    <table class="table">
      <tbody>
        <% display_comments(@post.id) %>
        <% if @comments.any? %>
          <% @comments.each do |comment| %>
            <tr>
              <td><%= link_to comment.user.username, user_path(id: comment.user.id) %></td>
              <td><%= comment.comment %></td>
            </tr>
          <% end -%>
        <% end -%>
      </tbody>
    </table>
    <div class="col-md-6">
      <% if signed_in? %>
        <% new_comment %>
        <%= simple_form_for @comment, html: {:class => 'form-horizontal' }, method: :post do |f| %>
          <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
          <%= f.hidden_field :user_id, value: @current_user.id %>
          <%= f.hidden_field :post_id, value: @post.id %>
          <div class='form-group'>
            <%= f.text_field :comment, :class => "form-control", :placeholder => "What's your reply?" %>
          </div>
          <div class="form-group">
            <%= f.submit 'Say it' , :class => "btn btn-primary", id: "align_right" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
